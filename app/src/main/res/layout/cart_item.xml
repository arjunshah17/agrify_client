<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   >

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
<com.github.florent37.shapeofview.shapes.CutCornerView
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    app:shape_cutCorner_topLeftSize="@dimen/dp_6"
    app:shape_cutCorner_bottomLeftSize="6dp"
    app:shape_cutCorner_bottomRightSize="@dimen/dp_6"
    app:shape_cutCorner_topRightSize="@dimen/dp_6"
    android:layout_height="wrap_content">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:id="@+id/product_image"
                android:backgroundTint="@color/image_backround_color"
                android:src="@drawable/add_photo" />
</com.github.florent37.shapeofview.shapes.CutCornerView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    tools:text="wheat"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:id="@+id/product_name"
                    android:textColor="@color/black"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    tools:text="â‚¹200,000"
                    android:id="@+id/product_price"

                    android:textColor="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_6"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/textQuantity"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="enter quantity"/>

                <it.sephiroth.android.library.numberpicker.NumberPicker
                    android:id="@+id/quantity_numberpicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:showDividers="none"


                    style="@style/NumberPicker.Outlined.Horizontal"
                    android:orientation="horizontal"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addToCartButton"
                style="@style/AppTheme.outLineButton.delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:icon="@drawable/shr_close_menu"
                app:iconTint="@color/vw_dialog_red"
                android:layout_weight="1"
                android:text="@string/remove"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addToWishList"
                style="@style/AppTheme.outLineButton"
                android:layout_width="match_parent"
                app:icon="@drawable/ic_wiselist_black_24dp"
                app:iconTint="@color/secondaryColor"
                android:layout_height="wrap_content"
               android:text="@string/move_wishlist"
                android:layout_weight="1"
              />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</layout>