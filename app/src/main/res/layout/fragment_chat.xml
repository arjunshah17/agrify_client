<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.ChatBot.ChatFragment">
     <FrameLayout
            android:id="@+id/product_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/store_item_background"
            android:elevation="2dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.tuann.floatingactionbuttonexpandable.FloatingActionButtonExpandable
                android:id="@+id/chatActionbutton"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="60dp"
                app:fab_bg_color="@color/buttonNormalColor"
                app:fab_content="ChatBot"
                app:fab_expanded="true"
                app:fab_icon="@drawable/ic_chat" />
        </FrameLayout>
</layout>